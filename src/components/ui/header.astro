<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 999;
    transition: background-color 0.5s ease;
    background-color: #00000000;
  }

  header.scroll {
    transition: all 0.5s ease;
    background-color: rgb(0, 153, 89);
  }
  #nav-button {
    display: none;
  }

  nav {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 100px;
  }

  nav a {
    color: #fff;
  }

  nav ul {
    display: flex;
    display: -webkit-flex;
  }
  nav ul li a {
    margin: 0 13px;
    padding: 2px 2px 2px 0;
    font-size: var(--body);
    transition: border-bottom 0.5s ease;
    border-bottom: solid 2px #00000000;
  }
  nav ul li a:hover {
    transition: border-bottom 0.5s ease;
    border-bottom: solid 2px #fff;
  }
  @media screen and (max-width: 600px) {
    header {
      background-color: rgb(0, 153, 89);
    }

    nav {
      justify-content: center;
      padding: 10px 20px;
    }
    #nav-link {
      position: fixed;
      top: 64px;
      left: -388px;
      height: 100%;
      padding: 0 40px;
      background-color: rgb(0, 189, 110);
      transition: left 0.5s ease;
    }
    nav ul {
      display: flex;
      display: -webkit-flex;
      flex-direction: column;
    }
    nav ul li {
      padding: 20px 0;
    }

    nav.open #nav-link {
      left: 0;
      transition: all 0.5s ease;
    }

    #nav-button {
      display: inline-block;
      width: 40px;
      height: 40px;
      position: absolute;
      top: 13px;
      left: 30px;
    }
    #nav-button span {
      display: block;
      height: 5px;
      margin: 6.25px 0;
      background-color: #fff;
    }
    #nav-button span {
      transition: transform 0.5s ease;
      transform: rotate(0deg);
      opacity: 1;
    }
    nav.open #nav-button span:nth-child(1) {
      transition: all 0.5s ease;
      transform: rotate(45deg);
      position: relative;
      top: 11px;
    }
    nav.open #nav-button span:nth-child(2) {
      transition: all 0.2s ease;
      opacity: 0;
    }
    nav.open #nav-button span:nth-child(3) {
      transition: all 0.5s ease;
      transform: rotate(-45deg);
      position: relative;
      top: -11px;
    }
  }
</style>
